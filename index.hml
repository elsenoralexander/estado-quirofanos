<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestor de Quirófanos - Quirónsalud</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- React y Babel -->
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    
    <!-- Firebase SDK (Compat) -->
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-auth-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore-compat.js"></script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap');
        body { font-family: 'Inter', sans-serif; overflow-x: hidden; }
        .glass { background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(12px); -webkit-backdrop-filter: blur(12px); }
        .animate-in { animation: fadeIn 0.4s ease-out forwards; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    </style>
</head>
<body class="bg-slate-50 text-slate-800">
    <div id="root"></div>

    <script type="text/babel">
        // --- 1. CONFIGURACIÓN DE FIREBASE (TUS DATOS REALES) ---
        const firebaseConfig = {
            apiKey: "AIzaSyDUtotD90gGjoCpFGOlJ7-N8SJfu9SHpuM",
            authDomain: "quirofanos-bf581.firebaseapp.com",
            projectId: "quirofanos-bf581",
            storageBucket: "quirofanos-bf581.firebasestorage.app",
            messagingSenderId: "418576214169",
            appId: "1:418576214169:web:6f9e6ea05149ed17717008",
            measurementId: "G-XT3305XCX7"
        };

        // Inicializar Firebase
        if (!firebase.apps.length) {
            firebase.initializeApp(firebaseConfig);
        }
        const auth = firebase.auth();
        const db = firebase.firestore();

        // --- 2. COMPONENTES DE ICONOS ---
        const Icon = ({ name, className = "w-6 h-6", size = 24 }) => {
            const icons = {
                ChevronLeft: <path d="m15 18-6-6 6-6"/>,
                ChevronRight: <path d="m9 18 6-6-6-6"/>,
                Camera: <React.Fragment><path d="M14.5 4h-5L7 7H4a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-3l-2.5-3z"/><circle cx="12" cy="13" r="3"/></React.Fragment>,
                Wifi: <React.Fragment><path d="M5 13a10 10 0 0 1 14 0"/><path d="M8.5 16.5a5 5 0 0 1 7 0"/><circle cx="12" cy="20" r="1"/></React.Fragment>,
                Activity: <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>,
                Settings: <React.Fragment><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/></React.Fragment>,
                Stethoscope: <React.Fragment><path d="M4.8 2.3A.3.3 0 1 0 5 2H4a2 2 0 0 0-2 2v5a6 6 0 0 0 6 6v0a6 6 0 0 0 6-6V4a2 2 0 0 0-2-2h-1a.2.2 0 1 0 .3.3"/><path d="M8 15v1a6 6 0 0 0 6 6h2a6 6 0 0 0 6-6v-4"/><circle cx="20" cy="10" r="2"/></React.Fragment>,
                Save: <React.Fragment><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/><path d="M17 21v-8H7v8"/><path d="M7 3v5h8"/></React.Fragment>,
                Edit: <React.Fragment><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></React.Fragment>,
                History: <React.Fragment><path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><path d="M3 3v5h5"/><path d="M12 7v5l4 2"/></React.Fragment>,
                X: <React.Fragment><path d="M18 6 6 18"/><path d="M6 6l12 12"/></React.Fragment>,
                Check: <polyline points="20 6 9 17 4 12"/>,
                Info: <React.Fragment><circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/></React.Fragment>,
                ExternalLink: <React.Fragment><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></React.Fragment>,
                Calendar: <React.Fragment><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></React.Fragment>,
                FileText: <React.Fragment><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><line x1="10" y1="9" x2="8" y2="9"/></React.Fragment>
            };
            return (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" style={{ width: size, height: size }} className={className}>
                    {icons[name] || <circle cx="12" cy="12" r="10"/>}
                </svg>
            );
        };

        // --- 3. DATOS MAESTROS ---
        const EQUIPOS_NOMBRES = ["Iluminación quirúrgica", "Carro Anestesia", "Monitor Anestesia", "Monitor auxiliar", "Electrobisturí", "Tecnología SpO2", "Instalación Imagen", "Mesa quirúrgica", "Auxiliares Cirugía", "Pc Casiopea (Pared)"];
        const ROOMS_BASE = [
            { id: 1, nombre: "Q1", especialidad: "Cirugía Cardiaca", estado: "Operativo" },
            { id: 2, nombre: "Q2", especialidad: "Cirugía Cardiaca", estado: "Operativo" },
            { id: 3, nombre: "Q3", especialidad: "C. General (Polivalente)", estado: "Operativo" },
            { id: 4, nombre: "Q4", especialidad: "C. General (Polivalente)", estado: "Mantenimiento" },
            { id: 5, nombre: "Q5", especialidad: "Polivalente", estado: "Operativo" },
            { id: 6, nombre: "Q6", especialidad: "Polivalente", estado: "Operativo" },
            { id: 8, nombre: "Q8", especialidad: "Polivalente", estado: "Operativo" },
            { id: 9, nombre: "Q9", especialidad: "Polivalente", estado: "Operativo" },
            { id: 10, nombre: "Q10", especialidad: "Polivalente", estado: "Operativo" },
            { id: 11, nombre: "Q11", especialidad: "Da Vinci (Polivalente)", estado: "Operativo" },
            { id: 12, nombre: "Q12", especialidad: "Hemodinámica", estado: "Operativo" },
            { id: 13, nombre: "Q. Obstétrico", especialidad: "Obstetricia", estado: "Operativo" }
        ];

        // --- 4. COMPONENTE APP ---
        function App() {
            const { useState, useEffect, useRef } = React;
            const [view, setView] = useState('landing');
            const [rooms, setRooms] = useState([]);
            const [equipments, setEquipments] = useState([]);
            const [connections, setConnections] = useState([]);
            const [config, setConfig] = useState({ logo: "" });
            const [selectedORId, setSelectedORId] = useState(null);
            const [selectedEqId, setSelectedEqId] = useState(null);
            const [loading, setLoading] = useState(true);
            const [isUploading, setIsUploading] = useState(false);

            const fileRef = useRef();
            const eqFileRef = useRef();
            const logoFileRef = useRef();
            const manualFileRef = useRef();

            useEffect(() => {
                const init = async () => {
                    try {
                        const timer = setTimeout(() => { if(loading) setLoading(false); }, 5000);
                        await auth.signInAnonymously();
                        
                        db.collection('rooms').onSnapshot(snap => {
                            if (snap.empty) {
                                ROOMS_BASE.forEach(r => db.collection('rooms').doc(r.id.toString()).set({...r, imagen: ""}, {merge: true}));
                            } else {
                                setRooms(snap.docs.map(d => ({id: d.id, ...d.data()})).sort((a,b) => parseInt(a.id) - parseInt(b.id)));
                            }
                            setLoading(false);
                            clearTimeout(timer);
                        }, () => setLoading(false));

                        db.collection('equipments').onSnapshot(snap => {
                            if (snap.empty) {
                                ROOMS_BASE.forEach(r => {
                                    EQUIPOS_NOMBRES.forEach((name, idx) => {
                                        const id = `${r.id}_e${idx}`;
                                        db.collection('equipments').doc(id).set({
                                            id, roomId: r.id, nombre: name, tipo: "Activo Principal",
                                            descripcion: `Equipamiento del ${r.nombre}.`, ultimaRevision: "2024-01-01",
                                            periodicidad: "anual", fechaAdquisicion: "2020-01-01", estado: "Operativo", imagen: "", manualUrl: ""
                                        }, {merge: true});
                                    });
                                });
                            } else {
                                setEquipments(snap.docs.map(d => ({id: d.id, ...d.data()})));
                            }
                        });

                        db.collection('connections').onSnapshot(snap => {
                            if (snap.empty) {
                                ROOMS_BASE.forEach(r => {
                                    for(let i=1; i<=6; i++) {
                                        const id = `${r.id}_b${i}`;
                                        db.collection('connections').doc(id).set({ id, roomId: r.id, boca: `RJ45-${i}`, uso: "Disponible", verificado: false }, {merge: true});
                                    }
                                });
                            } else {
                                setConnections(snap.docs.map(d => ({id: d.id, ...d.data()})));
                            }
                        });

                        db.collection('settings').doc('global').onSnapshot(doc => {
                            if (doc.exists) setConfig(doc.data());
                        });
                    } catch (e) { setLoading(false); }
                };
                init();
            }, []);

            const compressImage = (base64Str) => {
                return new Promise((resolve) => {
                    const img = new Image();
                    img.src = base64Str;
                    img.onload = () => {
                        const canvas = document.createElement('canvas');
                        let width = img.width;
                        let height = img.height;
                        const maxWidth = 1000;
                        if (width > maxWidth) { height *= maxWidth / width; width = maxWidth; }
                        canvas.width = width; canvas.height = height;
                        const ctx = canvas.getContext('2d');
                        ctx.drawImage(img, 0, 0, width, height);
                        resolve(canvas.toDataURL('image/jpeg', 0.65));
                    };
                });
            };

            const handleUpload = async (e, type, id) => {
                const file = e.target.files[0];
                if (!file) return;
                setIsUploading(true);
                const reader = new FileReader();
                reader.onload = async (event) => {
                    try {
                        if (type === 'manual') {
                            await db.collection('equipments').doc(id).update({ manualUrl: event.target.result });
                        } else {
                            const compressed = await compressImage(event.target.result);
                            if (type === 'room') await db.collection('rooms').doc(id.toString()).update({ imagen: compressed });
                            else if (type === 'eq') await db.collection('equipments').doc(id).update({ imagen: compressed });
                            else if (type === 'logo') await db.collection('settings').doc('global').set({ logo: compressed }, {merge: true});
                        }
                    } catch (e) {}
                    setIsUploading(false);
                };
                reader.readAsDataURL(file);
            };

            const calcularAntiguedad = (fecha) => {
                if (!fecha) return 0;
                const edad = Math.floor((Date.now() - new Date(fecha).getTime()) / (1000 * 60 * 60 * 24 * 365.25));
                return edad < 0 ? 0 : edad;
            };

            const calcularProximaRevision = (fecha, period) => {
                if (!fecha) return "Pendiente";
                const f = new Date(fecha);
                if (period === 'semestral') f.setMonth(f.getMonth() + 6);
                else if (period === 'anual') f.setFullYear(f.getFullYear() + 1);
                else if (period === 'bienal') f.setFullYear(f.getFullYear() + 2);
                return f.toLocaleDateString('es-ES');
            };

            const getAgeColor = (anios) => {
                if (anios >= 15) return 'border-l-red-500 bg-red-50 text-red-600';
                if (anios >= 10) return 'border-l-orange-500 bg-orange-50 text-orange-600';
                return 'border-l-emerald-500 bg-emerald-50 text-emerald-600';
            };

            const selectedOR = rooms.find(r => r.id == selectedORId);
            const selectedEq = equipments.find(e => e.id == selectedEqId);

            if (loading) return (
                <div className="min-h-screen flex flex-col items-center justify-center gap-6 bg-white p-10 text-center">
                    <div className="w-16 h-16 border-4 border-[#00A896] border-t-transparent rounded-full animate-spin"></div>
                    <p className="font-black text-xl text-slate-800 tracking-tight uppercase">Iniciando Gestión...</p>
                </div>
            );

            if (view === 'landing') return (
                <div className="min-h-screen pb-20 animate-in">
                    <header className="bg-[#00A896] p-6 shadow-md text-white sticky top-0 z-30 flex items-center justify-between">
                        <div className="flex items-center gap-4 text-white">
                            <div className="w-12 h-12 glass rounded-xl flex items-center justify-center overflow-hidden cursor-pointer relative group" onClick={() => logoFileRef.current.click()}>
                                {config.logo ? <img src={config.logo} className="w-20 h-20 object-contain p-1" style={{maxWidth: 'none'}} /> : <Icon name="Stethoscope" size={24} />}
                                <div className="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center text-white"><Icon name="Camera" size={16} /></div>
                                <input type="file" ref={logoFileRef} className="hidden" onChange={(e) => handleUpload(e, 'logo')} />
                            </div>
                            <h1 className="text-xl font-black tracking-tight uppercase">Estado de Quirófanos</h1>
                        </div>
                    </header>
                    <div className="p-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
                        {rooms.map(or => (
                            <div key={or.id} onClick={() => { setSelectedORId(or.id); setView('detail'); }} className="bg-white rounded-[2rem] shadow-sm border border-slate-100 overflow-hidden cursor-pointer hover:shadow-xl transition-all group">
                                <div className="h-44 bg-slate-200 relative overflow-hidden">
                                    <img src={or.imagen} className="w-full h-full object-cover group-hover:scale-105 transition-transform" onError={(e) => e.target.style.opacity = 0.2} />
                                    <div className={`absolute top-4 right-4 px-3 py-1 rounded-full text-[10px] font-bold text-white shadow-lg ${or.estado === 'Operativo' ? 'bg-emerald-500' : 'bg-amber-500'}`}>{or.estado.toUpperCase()}</div>
                                </div>
                                <div className="p-6 flex justify-between items-center text-slate-800">
                                    <div className="overflow-hidden"><h3 className="font-bold text-[#00A896] text-xl tracking-tighter truncate">{or.nombre}</h3><p className="text-[10px] text-slate-400 font-medium uppercase mt-0.5">{or.especialidad}</p></div>
                                    <div className="w-10 h-10 bg-slate-50 rounded-full flex items-center justify-center group-hover:bg-[#00A896] group-hover:text-white transition-colors text-slate-400 group-hover:text-white"><Icon name="ChevronRight" size={18} /></div>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            );

            if (view === 'detail' && selectedOR) return (
                <div className="min-h-screen bg-white animate-in">
                    <div className="h-72 sm:h-[400px] bg-slate-900 relative overflow-hidden text-white">
                        <img src={selectedOR.imagen} className="w-full h-full object-cover opacity-85" />
                        <div className="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-black/30"></div>
                        <button onClick={() => setView('landing')} className="absolute top-6 left-6 p-2.5 glass border border-white/20 text-white rounded-2xl shadow-xl hover:bg-white/25 transition-all"><Icon name="ChevronLeft" size={20} /></button>
                        <button onClick={() => fileRef.current.click()} className="absolute top-6 right-6 p-2.5 bg-[#00A896]/80 backdrop-blur-md border border-white/20 text-white rounded-2xl shadow-2xl hover:scale-105 transition-all"><Icon name="Camera" size={20} /></button>
                        <input type="file" ref={fileRef} className="hidden" onChange={(e) => handleUpload(e, 'room', selectedOR.id)} />
                        <div className="absolute bottom-8 left-8 sm:bottom-12 sm:left-12">
                            <h2 className="text-4xl sm:text-6xl font-black tracking-tighter uppercase text-white leading-none">{selectedOR.nombre}</h2>
                            <div className="flex items-center gap-3 mt-4 text-white">
                                <p className="opacity-90 flex items-center gap-2 text-sm sm:text-lg font-medium"><Icon name="Stethoscope" size={18} className="text-[#00A896]" /> {selectedOR.especialidad}</p>
                                <span className={`px-3 py-1 rounded-full text-[9px] font-bold border border-white/30 uppercase tracking-widest shadow-lg ${selectedOR.estado === 'Operativo' ? 'bg-emerald-500' : 'bg-amber-500'} text-white`}>{selectedOR.estado}</span>
                            </div>
                        </div>
                    </div>
                    <div className="px-6 pb-20 max-w-5xl mx-auto -mt-8 relative z-10 text-slate-800">
                        <div className="grid grid-cols-1 md:grid-cols-3 gap-3 mb-10">
                            {['Operativo', 'Mantenimiento', 'No disponible'].map(st => (
                                <button key={st} onClick={() => db.collection('rooms').doc(selectedOR.id.toString()).update({estado: st})} className={`p-4 rounded-2xl font-bold text-xs transition-all border-2 ${selectedOR.estado === st ? 'bg-slate-900 text-white border-[#00A896] shadow-xl' : 'bg-white text-slate-400 border-slate-100 hover:bg-slate-50'}`}>{st}</button>
                            ))}
                        </div>
                        <button onClick={() => setView('net')} className="w-full p-6 bg-slate-50 border border-slate-100 rounded-3xl mb-10 flex items-center gap-5 hover:shadow-md transition-all group">
                            <div className="w-12 h-12 bg-blue-100 text-blue-600 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform shadow-sm"><Icon name="Wifi" size={22} /></div>
                            <div className="text-left text-slate-800"><p className="text-[9px] font-bold text-slate-400 uppercase tracking-widest mb-1 text-slate-400">Infraestructura</p><p className="text-lg font-bold">Gestionar Bocas de Red</p></div>
                            <Icon name="ChevronRight" size={20} className="ml-auto text-slate-300" />
                        </button>
                        <h3 className="font-bold text-xl mb-6 flex items-center gap-3 text-slate-900"><Icon name="Activity" className="text-[#00A896]" size={24} /> Equipamiento Principal</h3>
                        <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                            {equipments.filter(e => e.roomId == selectedOR.id).map(eq => {
                                const age = calcularAntiguedad(eq.fechaAdquisicion);
                                const colorClass = getAgeColor(age);
                                return (
                                    <div key={eq.id} onClick={() => { setSelectedEqId(eq.id); setView('eq'); }} className={`flex items-center p-4 bg-white border border-slate-100 rounded-3xl border-l-4 shadow-sm hover:shadow-md transition-all cursor-pointer group ${colorClass.split(' ')[0]}`}>
                                        <div className="w-16 h-16 bg-slate-100 rounded-2xl overflow-hidden flex-shrink-0 border shadow-inner"><img src={eq.imagen} className="w-full h-full object-cover" onError={(e) => e.target.style.opacity = 0} /></div>
                                        <div className="ml-4 flex-grow overflow-hidden text-slate-800">
                                            <h4 className="font-bold text-slate-800 text-base group-hover:text-[#00A896] transition-colors truncate">{eq.nombre}</h4>
                                            <div className="flex items-center gap-2 mt-0.5"><p className="text-[9px] uppercase font-bold text-slate-400 tracking-wider">{eq.tipo}</p><span className={`text-[9px] font-bold px-2 py-0.5 rounded-full ${colorClass.split(' ').slice(1).join(' ')}`}>{age} años</span></div>
                                        </div>
                                        <Icon name="ChevronRight" size={16} className="text-slate-300 group-hover:translate-x-1 transition-transform" />
                                    </div>
                                );
                            })}
                        </div>
                    </div>
                </div>
            );

            if (view === 'eq' && selectedEq) return (
                <div className="min-h-screen bg-slate-50 animate-in pb-10">
                    <nav className="bg-[#00A896] p-5 text-white flex items-center justify-between sticky top-0 z-30 shadow-md">
                        <button onClick={() => setView('detail')} className="flex items-center gap-2 font-bold hover:text-white/80 transition-colors text-sm text-white"><Icon name="ChevronLeft" size={20} /> Volver</button>
                        <span className="font-extrabold uppercase tracking-widest text-2xl text-white drop-shadow-sm">{selectedOR?.nombre}</span>
                        <div className="w-10"></div>
                    </nav>
                    <div className="max-w-5xl mx-auto p-4 sm:p-6 text-slate-800">
                        <div className="bg-white rounded-[2.5rem] shadow-xl overflow-hidden border border-slate-100">
                            <div className="aspect-video bg-slate-200 relative group">
                                {isUploading && <div className="absolute inset-0 glass z-20 flex flex-col items-center justify-center text-white"><div className="w-10 h-10 border-4 border-white border-t-transparent rounded-full animate-spin"></div></div>}
                                <img src={selectedEq.imagen} className="w-full h-full object-cover" onError={(e) => e.target.style.opacity = 0.1} />
                                <div className="absolute top-6 left-6 flex flex-col gap-2 sm:flex-row">
                                    <span className="bg-[#00A896] text-white text-[9px] font-bold px-3 py-1.5 rounded-full uppercase tracking-widest shadow-xl text-white">{selectedEq.tipo}</span>
                                    <span className={`px-3 py-1.5 rounded-full text-[9px] font-bold uppercase tracking-widest border shadow-xl ${getAgeColor(calcularAntiguedad(selectedEq.fechaAdquisicion))}`}>Uso: {calcularAntiguedad(selectedEq.fechaAdquisicion)} años</span>
                                </div>
                                <button onClick={() => eqFileRef.current.click()} className="absolute bottom-6 right-6 p-3.5 bg-[#00A896] text-white rounded-2xl shadow-2xl hover:scale-110 active:scale-95 transition-all text-white"><Icon name="Camera" size={22} /></button>
                                <input type="file" ref={eqFileRef} className="hidden" onChange={(e) => handleUpload(e, 'eq', selectedEq.id)} />
                            </div>
                            <div className="p-8 sm:p-12 text-slate-800">
                                <div className="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-10 text-slate-800">
                                    <h2 className="text-3xl sm:text-4xl font-black text-slate-900 leading-tight">{selectedEq.nombre}</h2>
                                    <div className="relative w-full md:w-auto">
                                        <button onClick={() => setShowStatusModal(!showStatusModal)} className="w-full md:w-auto px-5 py-2.5 bg-emerald-500 text-white rounded-xl font-bold shadow-lg flex items-center justify-center gap-2 hover:brightness-110 transition-all uppercase text-[10px] tracking-widest text-white"><Icon name="Check" size={16} /> {selectedEq.estado}</button>
                                        {showStatusModal && (
                                            <div className="absolute top-full right-0 bg-white p-2 rounded-2xl shadow-2xl border z-50 animate-in mt-2 w-48 border-slate-100">
                                                {['Operativo', 'Mantenimiento', 'No disponible'].map(s => (
                                                    <button key={s} onClick={() => { db.collection('equipments').doc(selectedEq.id).update({estado: s}); setShowStatusModal(false); }} className="block w-full text-left px-4 py-2 hover:bg-slate-50 font-bold text-xs rounded-lg text-slate-700">{s}</button>
                                                ))}
                                            </div>
                                        )}
                                    </div>
                                </div>
                                <div className="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-10 text-slate-800">
                                    <div className="lg:col-span-2">
                                        <div className="flex items-center justify-between mb-4 text-slate-400">
                                            <h3 className="text-[9px] font-bold uppercase tracking-widest flex items-center gap-2 text-slate-400"><Icon name="Info" size={12} className="text-[#00A896]" /> Descripción Técnica</h3>
                                            <button onClick={() => setIsEditingDesc(!isEditingDesc)} className="text-slate-300 hover:text-[#00A896]"><Icon name="Edit" size={14} /></button>
                                        </div>
                                        {isEditingDesc ? (
                                            <div className="space-y-4 text-slate-800">
                                                <textarea className="w-full p-6 bg-slate-50 border-2 border-[#00A896] rounded-2xl font-medium focus:outline-none text-sm text-slate-800" value={selectedEq.descripcion} onChange={(e) => db.collection('equipments').doc(selectedEq.id).update({descripcion: e.target.value})} />
                                                <button onClick={() => setIsEditingDesc(false)} className="bg-[#00A896] text-white px-5 py-2 rounded-xl font-bold flex items-center gap-2 text-xs text-white"><Icon name="Save" size={14} /> Guardar</button>
                                            </div>
                                        ) : (
                                            <p className="text-slate-600 text-lg leading-relaxed italic bg-slate-50 p-6 rounded-3xl border border-slate-100">"{selectedEq.descripcion}"</p>
                                        )}
                                    </div>
                                    <div className={`p-6 rounded-[2rem] border-2 flex flex-col items-center justify-center text-center ${getAgeColor(calcularAntiguedad(selectedEq.fechaAdquisicion))}`}>
                                        <div className="flex justify-between w-full mb-4 opacity-40 text-slate-800"><Icon name="History" size={18} /><button onClick={() => setIsEditingAge(!isEditingAge)} className="text-slate-800"><Icon name="Edit" size={14} /></button></div>
                                        {isEditingAge ? (
                                            <div className="w-full space-y-2 text-slate-800">
                                                <input type="date" className="w-full p-2 rounded-xl bg-white border text-xs font-bold text-slate-800 text-center" value={selectedEq.fechaAdquisicion} onChange={(e) => db.collection('equipments').doc(selectedEq.id).update({fechaAdquisicion: e.target.value})} />
                                                <button onClick={() => setIsEditingAge(false)} className="bg-slate-800 text-white w-full py-1.5 rounded-lg text-[9px] font-bold text-white uppercase">Cerrar</button>
                                            </div>
                                        ) : (
                                            <><p className="text-5xl font-black mb-1 leading-none">{calcularAntiguedad(selectedEq.fechaAdquisicion)}</p><p className="text-[9px] font-bold uppercase tracking-[0.15em]">Años de Uso</p></>
                                        )}
                                    </div>
                                </div>
                                <div className="grid grid-cols-1 md:grid-cols-2 gap-6 text-slate-800">
                                    <div className="bg-white p-6 rounded-3xl border border-slate-100 shadow-sm relative group">
                                        <div className="flex items-center justify-between mb-4">
                                            <div className="flex items-center gap-3 text-slate-400"><Icon name="Calendar" size={20} /><span className="text-[9px] font-bold uppercase tracking-widest text-[#00A896]">Mantenimiento Preventivo</span></div>
                                            <button onClick={() => setIsEditingMaint(!isEditingMaint)} className="p-2 text-slate-300 hover:text-[#00A896] transition-colors"><Icon name="Edit" size={14} /></button>
                                        </div>
                                        {isEditingMaint ? (
                                            <div className="space-y-4 p-2 bg-slate-50 rounded-2xl animate-in text-slate-800">
                                                <div><label className="text-[9px] font-bold text-slate-400 uppercase block mb-1">Última Realización</label><input type="date" className="w-full p-2.5 bg-white border border-slate-200 rounded-xl font-bold text-sm" value={selectedEq.ultimaRevision} onChange={(e) => db.collection('equipments').doc(selectedEq.id).update({ultimaRevision: e.target.value})} /></div>
                                                <div><label className="text-[9px] font-bold text-slate-400 uppercase block mb-1">Periodicidad</label><select className="w-full p-2.5 bg-white border border-slate-200 rounded-xl font-bold text-sm text-slate-800" value={selectedEq.periodicidad} onChange={(e) => db.collection('equipments').doc(selectedEq.id).update({periodicidad: e.target.value})}><option value="semestral">Semestral</option><option value="anual">Anual</option><option value="bienal">Bienal</option></select></div>
                                                <button onClick={() => setIsEditingMaint(false)} className="w-full bg-[#00A896] text-white py-2 rounded-xl font-bold text-[10px] uppercase tracking-widest"><Icon name="Check" size={14} className="inline mr-1" /> Guardar Ciclo</button>
                                            </div>
                                        ) : (
                                            <React.Fragment><p className="text-3xl font-black text-slate-900">{new Date(selectedEq.ultimaRevision).toLocaleDateString('es-ES')}</p><div className="mt-4 pt-4 border-t border-slate-50 flex items-center justify-between"><div><p className="text-[9px] font-bold text-slate-400 uppercase tracking-widest mb-1">Próxima Inspección ({selectedEq.periodicidad})</p><p className="text-emerald-600 font-bold flex items-center gap-1.5 text-sm"><Icon name="Check" size={14} /> {calcularProximaRevision(selectedEq.ultimaRevision, selectedEq.periodicidad)}</p></div></div></React.Fragment>
                                        )}
                                    </div>
                                    <div className="bg-white p-6 rounded-3xl border border-slate-100 shadow-sm hover:border-[#00A896] transition-all group flex flex-col justify-center text-slate-800 relative">
                                        <div className="flex items-center gap-3 text-slate-400 mb-4"><Icon name="FileText" size={20} /><span className="text-[9px] font-bold uppercase tracking-widest">Manual Técnico (PDF)</span></div>
                                        {selectedEq.manualUrl ? (
                                            <div className="space-y-3"><button onClick={() => { const win = window.open(); win.document.write(`<iframe src="${selectedEq.manualUrl}" frameborder="0" style="border:0; top:0px; left:0px; bottom:0px; right:0px; width:100%; height:100%;" allowfullscreen></iframe>`); }} className="flex items-center gap-3 text-[#00A896] font-bold text-xl hover:scale-105 transition-transform text-left">Ver Manual <Icon name="ExternalLink" size={20} /></button><button onClick={() => manualFileRef.current.click()} className="text-[9px] font-bold text-slate-400 uppercase flex items-center gap-1 hover:text-[#00A896]"><Icon name="Edit" size={12} /> Reemplazar archivo</button></div>
                                        ) : (
                                            <button onClick={() => manualFileRef.current.click()} className="flex items-center gap-3 text-slate-400 font-bold text-xl hover:text-[#00A896] transition-colors text-left">Subir Manual <Icon name="Camera" size={20} /></button>
                                        )}
                                        <input type="file" ref={manualFileRef} className="hidden" accept="application/pdf" onChange={(e) => handleUpload(e, 'manual', selectedEq.id)} />
                                        <p className="text-[10px] text-slate-400 mt-2 font-medium leading-tight">Sube la ficha técnica o manual en formato PDF.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            );

            if (view === 'net') return (
                <div className="min-h-screen bg-slate-50 animate-in text-slate-800 pb-10">
                    <nav className="bg-[#00A896] p-5 text-white flex items-center justify-between sticky top-0 z-30 shadow-md">
                        <button onClick={() => setView('detail')} className="flex items-center gap-2 font-bold hover:text-white/80 transition-colors text-sm text-white"><Icon name="ChevronLeft" size={20} /> Volver</button>
                        <span className="font-extrabold uppercase tracking-widest text-2xl text-white">RED {selectedOR?.nombre}</span>
                        <div className="w-10"></div>
                    </nav>
                    <div className="p-4 sm:p-8 max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 text-slate-800">
                        {connections.filter(c => c.roomId == selectedOR.id).map(b => {
                            const isEditing = editingBocaId === b.id;
                            const isLibre = b.uso.toLowerCase().includes('disponible');
                            return (
                                <div key={b.id} className={`bg-white p-6 sm:p-8 rounded-[2rem] border-2 transition-all relative overflow-hidden ${isEditing ? 'border-[#00A896] shadow-2xl' : 'border-slate-100 hover:shadow-lg'}`}>
                                    <button onClick={() => { if(isEditing) setEditingBocaId(null); else { setEditingBocaId(b.id); setTempBoca(b.boca); setTempUso(b.uso); setTempVerificado(b.verificado); }}} className="absolute top-5 right-5 p-2 text-slate-300 hover:text-[#00A896] transition-all text-slate-400"><Icon name={isEditing ? "X" : "Edit"} size={18} /></button>
                                    {isEditing ? (
                                        <div className="space-y-4 animate-in">
                                            <div><label className="text-[9px] font-bold text-slate-400 uppercase tracking-widest mb-1 block">Boca ID</label><input className="w-full p-2.5 bg-slate-50 border rounded-xl font-bold text-sm" value={tempBoca} onChange={e => setTempBoca(e.target.value)} /></div>
                                            <div><label className="text-[9px] font-bold text-slate-400 uppercase tracking-widest mb-1 block">Uso Asignado</label><input className="w-full p-2.5 bg-slate-50 border rounded-xl font-bold text-sm" value={tempUso} onChange={e => setTempUso(e.target.value)} /></div>
                                            <div className="flex items-center justify-between p-2 bg-slate-50 rounded-xl"><span className="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Verificado</span><button onClick={() => setTempVerificado(!tempVerificado)} className={`w-10 h-5 rounded-full transition-all ${tempVerificado ? 'bg-[#00A896]' : 'bg-slate-300'}`} /></div>
                                            <button onClick={() => { db.collection('connections').doc(b.id).update({boca: tempBoca, uso: tempUso, verificado: tempVerificado}); setEditingBocaId(null); }} className="w-full bg-[#00A896] text-white py-2.5 rounded-xl font-bold shadow-md text-sm text-white uppercase tracking-widest">Guardar</button>
                                        </div>
                                    ) : (
                                        <React.Fragment>
                                            <div className="flex justify-between items-center mb-6">
                                                <div className="w-12 h-12 bg-blue-50 text-blue-600 rounded-xl flex items-center justify-center font-black text-lg border border-blue-100">{b.boca}</div>
                                                <div className={`px-3 py-1 rounded-full text-[9px] font-bold text-white shadow-sm ${isLibre ? 'bg-emerald-500' : 'bg-blue-600'} text-white`}>{isLibre ? 'LIBRE' : 'ACTIVA'}</div>
                                            </div>
                                            <p className="text-xl font-bold text-slate-800 leading-tight mb-8 min-h-[2.5rem]">{b.uso}</p>
                                            <div className="mt-auto pt-5 border-t flex items-center justify-between text-slate-300">
                                                <div className="flex items-center gap-2.5"><div className={`w-2 h-2 rounded-full ${isLibre ? 'bg-emerald-400 animate-pulse' : 'bg-blue-400'}`} /><span className="text-[9px] font-bold uppercase tracking-widest tracking-tighter">Estado Enlace</span></div>
                                                {b.verificado && <Icon name="Check" size={14} className="text-emerald-500" />}
                                            </div>
                                        </React.Fragment>
                                    )}
                                </div>
                            );
                        })}
                    </div>
                </div>
            );

            return null;
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
